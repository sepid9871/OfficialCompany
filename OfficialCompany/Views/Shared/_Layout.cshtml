<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - OfficialCompany</title>

	@* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@

	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/lib/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
	<link href="~/lib/aos/aos.css" rel="stylesheet">
	<link href="~/lib/glightbox/css/glightbox.min.css" rel="stylesheet">
	@*   <link href="~/lib/swiper/swiper-bundle.min.css" rel="stylesheet"> *@

	<!-- Main CSS File -->
	<link href="~/css/main.css" rel="stylesheet">
	<link rel="stylesheet" href="~/OfficialCompany.styles.css" asp-append-version="true" />

</head>
<body class="index-page">
	<header id="header" class="header d-flex align-items-center fixed-top">
		<div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

			<a href="index.html" class="logo d-flex align-items-center">
				<!-- Uncomment the line below if you also wish to use an image logo -->
				<!-- <img src="assets/img/logo.png" alt=""> -->
				<h1 class="sitename"><b class="text-info">O</b>fficialC<b class="text-info">o</b>mpany</h1>
			</a>
			<div class="d-flex justify-content-center align-items-center">
				<a href="/login" class="pe-5"><i class="bi bi-door-open"></i> Login</a>

				<nav id="navmenu" class="navmenu mr-3">
					<ul>
						<li><a href="#hero" class="active">Home</a></li>
						<li><a href="#about">About</a></li>
						<li><a href="#features">Features</a></li>
						<li><a href="#details">Details</a></li>
						<li><a href="#news">News</a></li>
						<li><a href="#contact">Contact</a></li>
					</ul>
					<i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
				</nav>				
			</div>
		</div>
	</header>

	<main role="main" class=" main">
		@RenderBody()
	</main>


	<footer id="footer" class="footer dark-background">

		<div class="container footer-top">
			<div class="row gy-4">
				<div class="col-lg-4 col-md-6 footer-about">
					<h1 class="sitename"><b class="text-info">O</b>fficialC<b class="text-info">o</b>mpany</h1>
					<div class="footer-contact pt-3">
						<p>1 Test Street</p>
						<p>Ontario, Canada</p>
						<p class="mt-3"><strong>Phone:</strong> <span>+1 (919) 554 5555</span></p>
						<p><strong>Email:</strong> <span>info@test.com</span></p>
					</div>
					<div class="social-links d-flex mt-4">
						<a href=""><i class="bi bi-twitter-x"></i></a>
						<a href=""><i class="bi bi-facebook"></i></a>
						<a href=""><i class="bi bi-instagram"></i></a>
						<a href=""><i class="bi bi-linkedin"></i></a>
					</div>
				</div>

				<div class="col-lg-2 col-md-3 footer-links">
					<h4>Useful Links</h4>
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#">About us</a></li>
						<li><a href="#">Services</a></li>
						<li><a href="#">Last News</a></li>
						<li><a href="#">Contact Us</a></li>
					</ul>
				</div>

				<div class="col-lg-3 col-md-3 footer-links">
					<h4>Our Services</h4>
					<ul>
						<li><a href="#">Custom Artwork & Portraits</a></li>
						<li><a href="#">Visual Branding & Identity Design</a></li>
						<li><a href="#">Art for Interior Decor</a></li>
						<li><a href="#">Digital Art & NFT Design</a></li>
						<li><a href="#">Creative Workshops & Events</a></li>
					</ul>
				</div>

				<div class="col-lg-3 col-md-12 footer-newsletter">
					<h4>Our Newsletter</h4>
					<p>Subscribe to our newsletter and receive the latest news about our products and services!</p>
					<form  class="php-email-form">
						<div class="newsletter-form"><input type="email" name="email"><input type="submit" value="Subscribe"></div>
						<div class="loading">Loading</div>
						<div class="error-message"></div>
						<div class="sent-message">Your subscription request has been sent. Thank you!</div>
					</form>
				</div>

			</div>
		</div>

		<div class="container copyright text-center mt-4">
			<p>© <span>Copyright</span> <strong class="px-1 sitename">OfficialCompany</strong> <span>All Rights Reserved</span></p>
		</div>

	</footer>

	<!-- Scroll Top -->
	<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

	<!-- Preloader -->
	@* <div id="preloader"></div> *@
	@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/aos/aos.js"></script>
	<script src="~/lib/glightbox/js/glightbox.min.js"></script>
	@* <script src="~/lib/swiper/swiper-bundle.min.js"></script> *@

	<!-- Main JS File -->
	<script src="~/js/main.js"></script>
	<script src="~/js/official.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
