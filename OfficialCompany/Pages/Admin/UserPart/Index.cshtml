@page
@model OfficialCompany.Pages.Admin.UserPart.IndexModel
@{
}
<div class="container-fluid ">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-5">Users List</h5>
            <div class="flex d-flex justify-content-between align-items-center pb-3">
                <form>
                    <div class="row col-auto">
                        <div class="col-8">
                            <label for="usr" class="visually-hidden">username</label>
                            <input type="text" class="form-control" id="usr" placeholder="Username">
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-primary ">Search</button>
                        </div>

                    </div>
                </form>
                <div class="col-auto">
                    <a asp-page="Create" class="btn btn-outline btn-success"><i class="bi bi-plus-circle pe-2"></i> New User</a>
                </div>
            </div>
            
            <div class="row">
                <hr />
               
                <br />
                <div class="col-md-8">
                    <table class="table table-striped" data-filter=#filter>
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Username</th>
                                <th>Mobile No.</th>
                                <th>Status</th>                                
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.userModel.Users)
                            {
                                <tr>
                                    <td class="center">@item.FullName </td>
                                    <td class="center">@item.Username</td>
                                    <td class="center">@item.Cellphone</td>
                                    <td class="center">@(item.IsActive?"Active":"Deactive")</td>
                                    <td>
                                        <a href="/Admin/Users/Edit/@item.Id" class="btn btn-dark btn-sm">
                                           Edit User
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="pt-3">
                                    <hr />
                                    <ul class="pagination justify-content-center">

                                        @for (int i = 1; i <= Model.userModel.PageCount; i++)
                                        {
                                            <li class="@((i == Model.userModel.CurrentPage) ? "active" : "")" tabindex="0">
                                                <a class="page-link rounded-2 bg-primary border-primary" href="/Admin/UserPart?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>